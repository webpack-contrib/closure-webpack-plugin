{
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "platform": {
      "type": "string",
      "enum": ["java", "javascript", "native"]
    },
    "file-conditions": {
      "anyOf": [
        {
          "instanceof": "RegExp"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "properties": {
    "childCompilations": {
      "description": "Whether closure-compiler should run during child compilations",
      "oneOf": [{
        "type": "boolean"
      }, {
        "instanceof": "Function"
      }]
    },
    "mode": {
      "description": "Methodology used to bundle assets in a chunk",
      "type": "string",
      "enum": ["AGGRESSIVE_BUNDLE", "STANDARD"]
    },
    "output": {
      "description": "",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "chunkFilename": {
          "description": "The filename of non-entry chunks as relative path inside the `output.path` directory.",
          "type": "string",
          "absolutePath": false
        },
        "filename": {
          "description": "The filename of non-entry chunks as relative path inside the `output.path` directory.",
          "type": "string",
          "absolutePath": false
        }
      }
    },
    "platform": {
      "description": "Version of closure-compiler used. May be an array of preference order",
      "oneOf": [{
        "$ref": "#/definitions/platform"
      }, {
        "type": "array",
        "items": {
          "$ref": "#/definitions/platform"
        }
      }]
    },
    "test": {
      "anyOf": [
        {
          "$ref": "#/definitions/file-conditions"
        },
        {
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/file-conditions"
              }
            ]
          },
          "type": "array"
        }
      ]
    },
    "include": {
      "anyOf": [
        {
          "$ref": "#/definitions/file-conditions"
        },
        {
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/file-conditions"
              }
            ]
          },
          "type": "array"
        }
      ]
    },
    "exclude": {
      "anyOf": [
        {
          "$ref": "#/definitions/file-conditions"
        },
        {
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/file-conditions"
              }
            ]
          },
          "type": "array"
        }
      ]
    },
    "extraCommandArgs": {
      "description": "Extra command arguments passed to java version of closure-compiler",
      "oneOf": [{
        "type": "string"
      }, {
        "type": "array",
        "items": {
          "type": "string"
        }
      }]
    }
  }
}
